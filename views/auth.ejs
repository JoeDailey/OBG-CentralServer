<%include part_head %>
	<div class="content" style="padding:20px;">
		<div class="well col-sm-12 col-xs-12" >
			<div class="col-sm-12 col-xs-12">
				
					<% if (typeof message == 'string' && message) { %>
						<div class="alert alert-danger alert-dismissable">
							<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
							<strong><%= message %></strong>
						</div>
					<% } %>
			</div>
			<div id="signup" class="col-sm-6 col-xs-12 right-bottom-edge">
				<h1>Want an Account?</h1>
				<form action="/signup" method="post" style="margin-bottom:7px;">
					<input name="email" type="email" class="form-control" placeholder="Email Address">
					<input name="username" type="text" class="form-control" placeholder="Username">
					<input name="password" type="password" class="form-control" placeholder="Password">
					<input name="confirm" type="password" class="form-control" placeholder="Confirm">
					<input type="submit" class="btn btn-primary pull-right" >
					<div class="clearfix"></div>
				</form>
			</div>
			<div id="signin" class="col-sm-6 col-xs-12">
				<h1>Already Have an Account?</h1>
				<form action="/signin" method="post">
					<input name="email" type="email" class="form-control" placeholder="Email Address">
					<input name="password" type="password" class="form-control" placeholder="Password">
					<div class="checkbox" style="float:left;margin-top:0px;">
						<label>
							<input type="checkbox"> Remember me
						</label>
					</div>
					<input type="submit" class="btn btn-primary pull-right" >
					<div class="clearfix"></div>
				</form>
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
<%include part_foot %>